datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               Int      @id @default(autoincrement())
  username         String
  email            String   @unique
  password         String
  name             String
  age              Int
  gender           String
  location         String
  interest         String
  profile_picture  String
  matchliked       Match[] @relation("likes")
  matched          Match[] @relation("matches")

}



model Match {
id  Int      @id @default(autoincrement())
userLiked    User @relation(name:"likes", fields: [user_id_1] , references: [id])
userMatched   User @relation(name:"matches", fields: [user_id_2] , references: [id])
user_id_1 Int 
user_id_2  Int 
status  String
created_at  DateTime
} 



model Annonces {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  image_url   String
  link_url    String
  created_at  DateTime
}
